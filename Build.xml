<project name = "ExpressionEvaluator">
    <target name="clean">
        <delete dir = "ExpressionEvaluator"></delete>
        <delete dir = "ExpressionEvaluator/lib"></delete>
        <delete dir = "ExpressionEvaluator/built"></delete>
        <delete dir = "ExpressionEvaluator/build/classes"></delete>
        <delete dir = "ExpressionEvaluator/build/TestClasses"></delete>
    </target>

    <target name = "createDir" >
        <mkdir dir = "ExpressionEvaluator"></mkdir>
        <mkdir dir = "ExpressionEvaluator/bin"></mkdir>
        <mkdir dir="ExpressionEvaluator/lib"></mkdir>
        <mkdir dir = "ExpressionEvaluator/External-Libraries"></mkdir>
    </target>
    <target name = "compile" depends ="createDir">
        <mkdir dir = "ExpressionEvaluator/build/classes"></mkdir>
        <javac srcdir = "src" destdir = "ExpressionEvaluator/build/classes"></javac>
    </target>
    <target name = "compileTest" depends = "compile">
        <copy file = "ExternalLibraries/junit-4.10.jar" todir = "ExpressionEvaluator/External-Libraries"></copy>
        <mkdir dir = "ExpressionEvaluator/build/TestClasses"></mkdir>
        <javac srcdir = "test" destdir = "ExpressionEvaluator/build/TestClasses"
               classpath = "ExpressionEvaluator/build/classes;ExpressionEvaluator/External-Libraries/junit-4.10.jar"></javac>
    </target>
</project>